<!-- tables -->
<link rel="stylesheet" type="text/css" href="table-style.css" />
<link rel="stylesheet" type="text/css" href="basictable.css" />
<script type="text/javascript" src="jquery.basictable.min.js"></script>
<script type="text/javascript">
    $(document).ready(function() {
      $('#table').basictable();

      $('#table-breakpoint').basictable({
        breakpoint: 768
      });

      $('#table-swap-axis').basictable({
        swapAxis: true
      });

      $('#table-force-off').basictable({
        forceResponsive: false
      });

      $('#table-no-resize').basictable({
        noResize: true
      });

      $('#table-two-axis').basictable();

      $('#table-max-height').basictable({
        tableWrapper: true
      });
    });
</script>
<!-- //tables -->

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="index.html">Home</a><i class="fa fa-angle-right"></i>Product Management</li>
</ol>

<!-- tables -->
<div class="agile-tables">
  <div class="w3l-table-info">
    <div class="row">
      <div id="h4" class="col-md-10">Product Management</div>
      <a href="product-add" class="col-md-2 add-product">Add Product</a>
    </div>
    <table id="table">
      <thead>
        <tr>
          <th>Image</th>
          <th>Name</th>
          <th>Category</th>
          <th>Gender</th>
          <th>Cost</th>
          <th>Sale</th>
          <th>Amount</th>
          <th>Describe</th>
          <th>Product_Group</th>
          <th></th>
        </tr>
      </thead>
      <tbody>    
      {{#each all_product}}
        <tr>
          <td><img id="img" src="{{this.Image}}" alt="" /></td>
          <td>{{this.Name}}</td>
          <td>{{this.Category}}</td>
          <td>{{this.Gender}}</td>
          <td>{{this.Cost}}</td>
          <td>{{this.Sale}}</td>
          <td>{{this.Amount}}</td>
          <td>{{this.Describe}}</td>
          <td>{{this.Product_Group}}</td>
          <td>
            <div class="float-right">
              <a href="/product-edit-{{this._id}}"><button data-toggle="tooltip" title="Edit" class="pd-setting-ed"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button></a>
              <form action="/product-delete-{{this._id}}" method="POST">
                <button type="submit" data-toggle="tooltip" title="Trash" class="pd-setting-ed"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
              </form>
            </div>
          </td>
        </tr>
      {{/each}}
      </tbody>
    </table>
  </div>
</div>
<!-- //tables -->